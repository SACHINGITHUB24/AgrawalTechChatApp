<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HiChat Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        html,
        body {
            height: 100vh;
            width: 100%;
            overflow: hidden;
            background-color: #ededed;

        }

        h1 {
            text-align: center;
            margin-top: 5%;
            color: darkblue;
            font-weight: 550;
            font-family: Arial, Helvetica, sans-serif;
        }

        .login {
            position: relative;
            z-index: 10;
            text-align: center;
            background-color: white;
            padding: 20px;
            margin: 20px auto;
            width: 350px;
            border-radius: 35px;
            margin-top: 8%;
            height: 360px;

        }

        .login label {
            color: black;
            font-weight: 400;
            font-family: Arial, Helvetica, sans-serif;
            margin-right: 65%;
            line-height: 2.5;

        }

        .login input {
            width: 250px;
            padding: 12px;
            background-color: #ededed;
            outline: none;
            border-radius: 50px;
            border: none;
        }

        .login button {
            display: inline-block;
            width: 250px;
            text-align: center;
            line-height: normal;
            padding: 12px 0;
            background-color: darkblue;
            color: white;
            border-radius: 50px;
            transition: all 0.3s ease;
            margin-top: 10px;
            text-decoration: none;

        }

        .login button:hover {
            background-color: rgb(0, 0, 113);
        }

        .login h2 {
            font-weight: 400;
            font-family: Arial, Helvetica, sans-serif;
            line-height: 1.4;
        }


        .password-container {
            position: relative;
            display: inline-block;
        }

        .password-container input {
            width: 250px;
            padding: 12px 40px 12px 12px;
            background-color: #ededed;
            outline: none;
            border-radius: 50px;
            border: none;
        }

        .password-container i {
            position: absolute;
            right: 45px;
            top: 22%;
            transform: translateY(-50%);
            cursor: pointer;
            color: gray;
        }

      .login a {
    display: inline-block;
    margin-top: 10px;
    padding: 10px 20px;
    background-color: transparent;
    color: darkblue;
    text-decoration: none;
    font-family: Arial, Helvetica, sans-serif;
    font-size: 14px;
    transition: all 0.3s ease;
}

.login a:hover {
    
    color: rgb(0, 0, 111);
}



        @media screen and (orientation: portrait) {
            h1 {
                font-size: 45px;
                margin-top: 15%;
            }

            .login {
                margin-top: 25%;
                height: 400px;

            }

            .login label {
                font-size: 20px;
            }

            .login input {
                padding: 18px;
                width: 280px;
            }

            .login button {
                padding: 17px;
                width: 280px;
            }

        }
    </style>
</head>

<body>
    <h1>Hichat!</h1>


    <form action="/login" method="post">
    <div class="login">
        
        <h2>Welcome to Hichat <br> Login Now</h2>
        <label for="">Username</label> <br>
        <input type="text" placeholder="Alex123" name="username"><br>


        <label for="">Password</label> <br>
        <div class="password-container">
            <input type="password" placeholder="Enter Password" name="password" id="password">
            <i id="togglepass" class="fa-solid fa-eye"></i>

            <button type="submit">Login &raquo;</button><br>

            <!-- <a href="/loginadmin">Login as Admin</a> -->
            
        </div>




        

        </form>
    </div>

    <script>
           document.getElementById('togglepass').addEventListener('click', function(){
            const passinput = document.getElementById('password');
            const icon = this;

            if(passinput.type === 'password'){
                passinput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            }else{
                passinput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
           })
    </script>

</body>

</html>


